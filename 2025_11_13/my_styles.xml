<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myLinearLayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#121212</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="myButtonStyle">
        <item name="android:backgroundTint">#2E1A4A</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#B0B0B0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">30dp</item>
    </style>
    <style name="myTextViewStyle">
        <item name="android:textColor">#2E1A4A</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity"></item>
    </style>
</resources>